{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "declaration": true,
    "baseUrl": ".",
    "resolveJsonModule": true
  },
  "include": ["src", "src/types", "package.json"],
  "exclude": ["node_modules", "dist", "dev"]
}
